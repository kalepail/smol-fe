---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Smol Labs">
  <div class="min-h-screen bg-black text-[#9ae600] font-pixel p-4 md:p-8 pt-24 relative overflow-hidden">
    
    <!-- Background Effect (borrowed & modified from Store) -->
    <div class="absolute inset-0 opacity-20 pointer-events-none">
        <div class="absolute inset-0 bg-[linear-gradient(rgba(18,18,18,0)_50%,rgba(0,0,0,0.25)_50%),linear-gradient(90deg,rgba(255,0,0,0.06),rgba(0,255,0,0.02),rgba(0,0,255,0.06))] z-10 bg-[length:100%_2px,3px_100%]"></div>
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,theme('colors.lime.900')_0%,transparent_70%)] opacity-20"></div>
    </div>

    <div class="max-w-7xl mx-auto relative z-20 flex flex-col items-center justify-center min-h-[60vh] text-center gap-8">
      
      <!-- Header -->
      <div class="space-y-4">
        <h1 class="text-4xl md:text-8xl font-black tracking-tighter animate-pulse" style="image-rendering: pixelated; text-shadow: 4px 4px 0px #000;">
          <span class="text-white">SMOL</span><span class="text-[#f91880]">LABS</span>
        </h1>
        <div class="h-px w-32 bg-[#9ae600] mx-auto"></div>
        <p class="text-sm md:text-xl text-[#9ae600] uppercase tracking-[0.3em] font-mono">
          Experimental Protocol v0.1
        </p>
      </div>

      <!-- Blank Canvas / Placeholder for Experiments -->
      <div class="w-full max-w-2xl border-4 border-[#333] border-dashed rounded-lg p-12 md:p-24 bg-[#111]/50 backdrop-blur-sm flex flex-col items-center justify-center gap-6 group hover:border-[#9ae600]/50 transition-colors duration-500">
        
        <div class="w-24 h-24 rounded-full border-2 border-[#333] flex items-center justify-center group-hover:border-[#9ae600] group-hover:animate-spin-slow transition-colors">
            <svg class="w-10 h-10 text-[#555] group-hover:text-[#9ae600] transition-colors" viewBox="0 0 24 24" fill="currentColor">
                <path d="M13,2V11H22V13H14.82C14.43,18.47 9.47,22 4,22V20C8.36,20 12.29,17.18 12.82,13H2V11H11V2H13Z" />
            </svg>
        </div>

        <div class="space-y-2">
            <h2 class="text-2xl text-white uppercase tracking-widest">Awaiting Input</h2>
            <p class="text-xs text-slate-500 font-mono">
                The construct is initialized. Agentic fabrication pending.<br/>
                Stand by for incoming experimental modules.
            </p>
        </div>

      </div>

      <!-- Footer / Status -->
      <div class="flex items-center gap-2 text-[10px] md:text-xs text-[#555] font-mono uppercase tracking-widest">
        <span class="w-2 h-2 bg-[#9ae600] rounded-full animate-ping"></span>
        System Online // Ready for Synthesis
      </div>

    </div>
  </div>
</Layout>

<style>
    @keyframes spin-slow {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
    .animate-spin-slow {
        animation: spin-slow 12s linear infinite;
    }
</style>
