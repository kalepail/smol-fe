---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Smol â€“ Store">
	<main class="min-h-screen text-white p-6 pt-24 max-w-7xl mx-auto">
        <div class="flex flex-col md:flex-row md:items-end justify-between mb-12 gap-6">
            <div>
                <h1 class="text-4xl font-bold mb-2 tracking-tighter">Store</h1>
                <p class="text-white/50 font-mono text-sm uppercase tracking-widest">Premium Upgrades & Assets</p>
            </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
             <!-- Premium Profile Header Card -->
             <div class="bg-[#1d1d1d]/70 backdrop-blur-xl rounded-xl border border-white/10 p-6 flex flex-col gap-4 group hover:border-[#4ade80]/50 transition-all">
                <div class="aspect-video bg-black/50 rounded-lg overflow-hidden relative border border-white/5 group-hover:border-[#4ade80]/30 transition-colors">
                    <!-- Preview of scrolling header -->
                    <div class="absolute inset-0 opacity-50">
                        <div class="w-full h-full bg-gradient-to-br from-green-500/20 to-transparent"></div>
                        <!-- Simple visual represenation of scroll -->
                         <div class="absolute inset-0 flex flex-wrap content-start opacity-30">
                            {[...Array(12)].map((_, i) => (
                                <div class="w-1/4 aspect-square bg-white/10 border border-white/5 m-0.5"></div>
                            ))}
                         </div>
                    </div>
                     <span class="absolute top-2 right-2 px-2 py-0.5 bg-[#4ade80] text-black text-[10px] font-bold uppercase rounded-full">New</span>
                </div>
                <div>
                    <h3 class="text-xl font-bold text-white group-hover:text-[#4ade80] transition-colors">Premium Profile Header</h3>
                    <p class="text-sm text-white/50 mt-1">Unlock the scrolling artist collage and glowing kale border for your profile.</p>
                </div>
                <div class="mt-auto pt-4 flex items-center justify-between border-t border-white/5">
                     <span class="text-[#4ade80] font-mono">100 KALE</span>
                     <button class="px-4 py-1.5 bg-[#4ade80]/20 hover:bg-[#4ade80]/30 text-[#4ade80] text-xs font-bold uppercase tracking-widest rounded-lg transition-colors border border-[#4ade80]/20 cursor-pointer">
                        Purchase
                     </button>
                </div>
             </div>
        </div>
    </main>
</Layout>
