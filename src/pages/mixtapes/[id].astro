---
import Layout from "../../layouts/Layout.astro";
import MixtapeDetailView from "../../components/mixtape/MixtapeDetailView.svelte";

const { id } = Astro.params;

// Fetch minimal data for SEO/meta tags only
let title = "Smol – Mixtape";
let description = "Smol art onchain";
let image_url: string | null = null;
let schema = null;

if (id) {
    try {
        const API_URL = import.meta.env.PUBLIC_API_URL || "https://api.smol.xyz";
        const data = await fetch(`${API_URL}/mixtapes/${id}`, {
            headers: {
                Cookie: Astro.request.headers.get('cookie') ?? '',
            }
        }).then(async (res) => {
            if (res.ok) return res.json();
            return null;
        });

        if (data) {
            title = `${data.Title} – Smol`;
            description = data.Desc || "Smol art onchain";

            // Use first track's image as mixtape cover
            if (data.Smols?.[0]?.Id) {
                image_url = `${API_URL}/image/${data.Smols[0].Id}.png`;
            }

            schema = {
                "@context": "https://schema.org",
                "@type": "MusicPlaylist",
                "name": data.Title,
                "description": description,
                "url": Astro.url.href,
                "image": image_url,
                "numTracks": data.Smols?.length || 0,
                "track": data.Smols?.map((s: any) => ({
                    "@type": "MusicRecording",
                    "name": `Track`, // We don't have track titles in this minimal fetch usually
                    "url": `${import.meta.env.PUBLIC_URL || 'https://noot.smol.xyz'}/${s.Id}`
                }))
            };
        }
    } catch (error) {
        console.error('Failed to fetch mixtape meta data:', error);
    }
}
---

<Layout {title} {description} {image_url}>
    {schema && (
        <script type="application/ld+json" set:html={JSON.stringify(schema)} />
    )}
    <MixtapeDetailView {id} client:only="svelte" />
</Layout>
